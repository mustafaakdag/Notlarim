@using Notlarim101.WebApp
@model IEnumerable<Notlarim101.Entity.Category>

@{
    ViewBag.Title = "Kategoriler";
}

<div class="row mt-5 mb-3">

    <div class="col-md-10 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">

    <div class="col-md-10 col-md-offset-1">
        <p>
            @Bootstrap.LinkButton("/Category/Create", "primary", string.Empty, "Yeni Kayit", "bi bi-plus-circle", "Yeni Kayit")
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedUsername)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedUsername)
                        </td>
                        <td>
                            @Bootstrap.LinkButton("/Category/Edit/" + item.Id, "warning", "btn-sm", "Guncelle", "bi bi-pencil", string.Empty)
                            |
                            @Bootstrap.LinkButton("/Category/Details/" + item.Id, "info", "btn-sm", "Detay", "bi bi-search", string.Empty)
                            |
                            @Bootstrap.LinkButton("/Category/Delete/" + item.Id, "danger", "btn-sm", "Sil", "bi bi-trash", string.Empty)
                        </td>
                    </tr>
                }

            </table>
        </p>
    </div>
</div>


